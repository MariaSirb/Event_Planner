@page
@model Event_Planner.Pages.Locatii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Locatii</h1>

<p>
    <a asp-page="Create">Alege locatia favorita</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Poza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Nr_pers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Descriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].DataInceput)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].DataSfarsit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Locatie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nr_pers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInceput)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataSfarsit)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
